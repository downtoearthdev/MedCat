<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:id="@+id/scriptinfo"
	android:background="@color/primaryDarkBlue"
	android:textAlignment="center">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#000000"
		android:id="@+id/frequencyTextView"
		android:layout_centerHorizontal="true"/>

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:textColor="#000000"
		android:layout_below="@id/frequencyTextView"
		android:id="@+id/amountTextView"
		android:layout_centerHorizontal="true"/>

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:textColor="#000000"
		android:id="@+id/dosageTextView"
		android:layout_below="@id/amountTextView"
		android:layout_centerHorizontal="true"/>

</RelativeLayout>

